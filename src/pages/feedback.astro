---
import Layout from '../layouts/Layout.astro';

if (!Astro.locals.user) {
  return Astro.redirect('/login');
}
---

<Layout title="Feedback - webStash">
  <div class="max-w-2xl mx-auto">
    <h2 class="text-3xl font-bold text-slate-900 mb-2">Send Feedback</h2>
    <p class="text-slate-600 mb-8">
      Help us improve webStash by reporting bugs or suggesting new features
    </p>

    <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-8">
      <form id="feedbackForm" class="space-y-5">
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-3">
            Feedback Type
          </label>
          <div class="flex gap-4">
            <label class="flex items-center cursor-pointer">
              <input
                type="radio"
                name="type"
                value="bug"
                checked
                class="w-4 h-4 text-blue-600 border-slate-300 focus:ring-blue-500"
              />
              <span class="ml-2 text-slate-700">üêõ Bug Report</span>
            </label>
            <label class="flex items-center cursor-pointer">
              <input
                type="radio"
                name="type"
                value="feature"
                class="w-4 h-4 text-blue-600 border-slate-300 focus:ring-blue-500"
              />
              <span class="ml-2 text-slate-700">üí° Feature Request</span>
            </label>
          </div>
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-slate-700 mb-1">
            Message
          </label>
          <textarea
            id="message"
            name="message"
            rows="6"
            required
            placeholder="Describe the bug or feature request in detail..."
            class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          ></textarea>
        </div>

        <div id="error" class="hidden text-sm text-red-600 bg-red-50 border border-red-200 rounded-lg p-3"></div>
        <div id="success" class="hidden text-sm text-green-600 bg-green-50 border border-green-200 rounded-lg p-3"></div>

        <button
          type="submit"
          class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium"
        >
          Submit Feedback
        </button>
      </form>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('feedbackForm') as HTMLFormElement;
  const error = document.getElementById('error') as HTMLDivElement;
  const success = document.getElementById('success') as HTMLDivElement;
  const messageTextarea = document.getElementById('message') as HTMLTextAreaElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    error.classList.add('hidden');
    success.classList.add('hidden');

    const formData = new FormData(form);
    const data = {
      type: formData.get('type'),
      message: formData.get('message')
    };

    try {
      const response = await fetch('/api/feedback', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (response.ok) {
        success.textContent = 'Thank you for your feedback! We appreciate you helping us improve webStash.';
        success.classList.remove('hidden');
        form.reset();
        messageTextarea.value = '';
      } else {
        error.textContent = result.error || 'Failed to submit feedback';
        error.classList.remove('hidden');
      }
    } catch (err) {
      error.textContent = 'An error occurred';
      error.classList.remove('hidden');
    }
  });
</script>
